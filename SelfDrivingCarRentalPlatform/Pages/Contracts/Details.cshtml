@page
@model SelfDrivingCarRentalPlatform.Pages.Contracts.DetailsModel

@{
    ViewData["Title"] = "Details";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1>Details</h1>

<div class="container">
    <div class="row">
        <h4>Contract</h4>
         <hr />
        <div class="col-md-6">
            @if (Model.Contract.Car.ImageBase64 != null)
            {
                <img src="@Model.Contract.Car.ImageBase64" alt="Car Image" class="img-fluid">
            }
        </div>
        <div class="col-md-6">
            <dl class="row">
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Contract.RentStartDate)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Contract.RentStartDate)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Contract.RentEndDate)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Contract.RentEndDate)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Contract.SignDate)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Contract.SignDate)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Contract.IsDeleted)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Contract.IsDeleted)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Contract.Customer)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Contract.Customer.Email)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Contract.Car)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Contract.Car.CarModel)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Contract.ContractStatus)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Contract.ContractStatus)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Contract.Transaction.TotalPrice)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Contract.Transaction.TotalPrice)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Contract.Transaction.Deposit)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Contract.Transaction.Deposit)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Contract.Transaction.MortgageFee)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Contract.Transaction.MortgageFee)
                </dd>
                @if (Model.Contract.Transaction.DamageFee != null)
                {
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Contract.Transaction.DamageFee)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Contract.Transaction.DamageFee)
                    </dd>
                }
                @if (Model.Contract.Transaction.LateReturnPenalty != null)
                {
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Contract.Transaction.LateReturnPenalty)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Contract.Transaction.LateReturnPenalty)
                    </dd>
                }
                @if (@Model.Contract.Transaction.CancelRentPenalty != null)
                {
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Contract.Transaction.CancelRentPenalty)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Contract.Transaction.CancelRentPenalty)
                    </dd>
                }
            </dl>
        </div>
    </div>
</div>
<div>
    <a asp-page="./Edit" asp-route-id="@Model.Contract?.Id">Edit</a> |
    <a asp-page="./Index">Back to List</a>
</div>
