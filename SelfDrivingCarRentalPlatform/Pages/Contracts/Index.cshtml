@page
@using BusinessObjects.Enums;
@model Contracts.IndexModel

@{
    ViewData["Title"] = "Renting History";
}

<div class="untree_co-section before-footer-section">
    <div class="container">
        <div class="row mb-5">
            <form class="col-md-12" method="post">
                <div class="site-blocks-table">
                    <table class="table" style="table-layout: fixed">
                        <thead>
                            <tr>
                                <th>Car</th>
                                <th>Car Owner</th>
                                <th>Rent Start</th>
                                <th>Rent End</th>
                                <th>Status</th>
                                <th></th>
                            </tr>
                        </thead>  
                        <tbody>
                            @foreach (var item in Model.RentingList)
                            {
                                <tr>
                                    <td>
                                        <img style="width: 100%" src="~/images/car-white-transparent-background.png" alt="Image">
                                        @item.Car.CarModel
                                    </td>
                                    <td>
                                        <h5 class="text-black">@item.Car.CarOwner?.Fullname</h5>
                                    </td>
                                    <td>@item.RentStartDate</td>
                                    <td>@item.RentEndDate</td>
                                    <td>@item.ContractStatus</td>
                                    <td>
                                        @if (item.ContractStatus == ContractStatus.Signed)
                                        {
                                            <a class="btn btn-primary d-block mb-1" asp-page="CarReceived" asp-route-id="@item.Id">Car Received</a>
                                            <a class="btn btn-danger d-block mb-1" asp-page="Cancel" asp-route-id="@item.Id">Cancel Rent</a>
                                        }
                                         <a class="btn btn-danger d-block mb-1" asp-page="Details" asp-route-id="@item.Id">Detail</a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </form>
        </div>
    </div>
</div>